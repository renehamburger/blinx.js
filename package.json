{
  "name": "blinx.js",
  "version": "0.4.3",
  "description": "A multi-language client-side library to automatically convert Bible references to Bible links with passage pop-ups",
  "main": "dist/blinx.js",
  "scripts": {
    "tmp": "a=1 echo $a",
    "version": "bash scripts/version.sh",
    "start": "webpack-dev-server --port 9000 --host 0.0.0.0 --open-page http://localhost:9000 --inline --progress --profile --colors --watch --content-base src/",
    "build": "npm run lint && npm run format:check && webpack --config webpack.config.js -p",
    "lint": "tslint -p tsconfig.json && tslint-config-prettier-check ./tslint.json",
    "format": "prettier \"**/*.*\" --write",
    "format:check": "prettier \"**/*.*\" --check",
    "karma": "karma start karma.config.js",
    "test": "npm run karma -- --browsers Chrome --single-run",
    "test-ci": "npm run karma -- --browsers ChromeHeadlessNoSandbox --single-run -coverage",
    "test-debug": "npm run karma -- --browsers ChromeDebugging --reporters dots --browser-no-activity-timeout=999999",
    "test-debug-node": "node --inspect-brk ./node_modules/karma/bin/karma start karma.config.js --browsers Chrome",
    "test-browserstack": "npm run karma -- --single-run",
    "test-browserstack.chrome": "npm run karma -- --single-run --browsers win10_chrome"
  },
  "engines": {
    "node": "12.18.0",
    "npm": "6.14.4"
  },
  "keywords": [
    "bible",
    "reference",
    "tagger"
  ],
  "author": "Rene Hamburger",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/renehamburger/blinx.js.git"
  },
  "devDependencies": {
    "@types/jasmine": "2.8.6",
    "@types/lodash": "^4.14.104",
    "@types/node": "^9.4.6",
    "awesome-typescript-loader": "^3.4.1",
    "circular-dependency-plugin": "^4.4.0",
    "css-loader": "^3.5.3",
    "jasmine-core": "2.99.1",
    "karma": "^5.0.9",
    "karma-browserstack-launcher": "^1.6.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^1.1.1",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "git+https://github.com/renehamburger/karma-typescript.git#bundled",
    "prettier": "^2.0.5",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.20.3",
    "tsconfig-paths-webpack-plugin": "^2.0.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.6",
    "webpack": "^4.0.0",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "lodash": "^4.17.20"
  }
}
